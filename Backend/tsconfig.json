{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,     
    "emitDecoratorMetadata": true,      

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
